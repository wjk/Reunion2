<Project>
  <PropertyGroup>
    <WixVersion>3.11.2</WixVersion>
    <TargetFramework>native</TargetFramework>

    <OutputPath>$(BaseOutputPath)$(Platform)\$(Configuration)\</OutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)$(Platform)\$(Configuration)\</IntermediateOutputPath>

    <CustomAfterNoTargets>$(MSBuildThisFileDirectory)CustomAfter.targets</CustomAfterNoTargets>
  </PropertyGroup>

  <ItemGroup>
    <ProjectCapability Include="PackageReferences" />
    <ProjectCapability Include="ProjectReferences" />
    <AvailableItemName Include="Compile" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="wix" Version="$(WixVersion)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)xsd\*_v3.xsd">
      <Link>Schemas\%(FileName)%(Extension)</Link>
      <Visible>false</Visible>
    </None>
  </ItemGroup>

  <Import Project="..\signing\CodeSigning.props" />
</Project>
